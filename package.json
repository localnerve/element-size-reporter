{
  "name": "react-size-reporter",
  "version": "0.1.0",
  "description": "A higher order component that reports size and top for components",
  "main": "index.js",
  "scripts": {
    "test": "mocha src/tests/unit --recursive --reporter spec --compilers js:babel-register",
    "test:debug": "rimraf output/ && babel ./src -d output -s inline && mocha output/tests/unit --recursive --reporter spec --debug-brk",
    "test:cover": "cross-env BABEL_ENV=cover NYC_CWD=src nyc --reporter=lcov npm test",
    "build": "npm run lint && npm test && babel src/lib/index.js -o index.js",
    "lint": "eslint .",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localnerve/react-size-reporter.git"
  },
  "keywords": [
    "react",
    "size",
    "position",
    "width",
    "height",
    "top",
    "resize",
    "cloudinary"
  ],
  "author": "Alex Grant (@localnerve)",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/localnerve/react-size-reporter/issues"
  },
  "homepage": "https://github.com/localnerve/react-size-reporter#readme",
  "nyc": {
    "include": [
      "/"
    ],
    "report-dir": "coverage"
  },
  "precommit" : [
    "npm run lint",
    "npm run test"
  ],
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "cross-env": "^1.0.7",
    "eslint": "^2.8.0",
    "eslint-plugin-react": "^5.0.1",
    "jsdom": "^8.4.1",
    "mocha": "^2.4.5",
    "nyc": "^6.4.0",
    "precommit": "^1.2.0",
    "react": "^15.0.1",
    "react-addons-test-utils": "^15.0.1",
    "rimraf": "^2.5.2"
  },
  "dependencies": {
    "lodash": "^4.11.1"
  },
  "peerDependencies": {
    "react": "^0.14 || ^15.0"
  },
  "engines": {
    "node": "4.x || 5.x"
  }
}

{
  "name": "element-size-reporter",
  "version": "0.3.7",
  "description": "Reports width, height, and top for selected DOM elements",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && mocha src/tests/unit --recursive --reporter spec --compilers js:babel-register",
    "test:debug": "rimraf output/ && babel ./src -d output -s inline && mocha output/tests/unit --recursive --reporter spec --debug-brk",
    "test:cover": "rimraf .nyc_output/ && cross-env BABEL_ENV=cover NYC_CWD=src nyc --reporter=lcov npm test",
    "build": "npm run lint && npm test && babel src/lib/index.js -o index.js",
    "lint": "eslint .",
    "prepublish": "npm run build",
    "validate": "npm ls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localnerve/element-size-reporter.git"
  },
  "keywords": [
    "react",
    "size",
    "position",
    "width",
    "height",
    "top",
    "resize",
    "cloudinary"
  ],
  "author": "Alex Grant (@localnerve)",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/localnerve/element-size-reporter/issues"
  },
  "homepage": "https://github.com/localnerve/element-size-reporter#readme",
  "nyc": {
    "instrument": false,
    "sourceMap": false,
    "report-dir": "coverage"
  },
  "pre-commit": [
    "test"
  ],
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-istanbul": "^1.1.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "coveralls": "^2.11.12",
    "cross-env": "^2.0.0",
    "eslint": "^3.2.0",
    "eslint-plugin-react": "^6.0.0",
    "jsdom": "^9.4.1",
    "lodash": "^4.14.1",
    "mocha": "^2.5.3",
    "nyc": "^7.1.0",
    "precommit-hook": "^3.0.0",
    "react": "^15.0.0",
    "react-addons-test-utils": "^15.0.0",
    "rimraf": "^2.5.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">= 4.x"
  }
}
